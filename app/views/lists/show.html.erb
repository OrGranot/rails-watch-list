<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/seed/picsum/500/300)">
  <h1><%= @list.name %></h1>
  <div class="counter"><%= @list.movies.count %> movie<%= @list.movies.count > 1 ? "s" : "" %></div>
</div>

<div class="container">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success new-movie" %>
  <div class="bookmarks">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src="<%= bookmark.movie.poster_url %>" />
        <div class="card-trip-infos">
          <div class="card-title d-flex">
            <h2><%= bookmark.movie.title %></h2>
            <p class="rating"><%= bookmark.movie.rating %></p>
            <i class="fas fa-star"></i>
          </div>
          <p class="overview"><%= bookmark.movie.overview %></p>
          <div class="card-trip-stats d-flex">
            <h2 class="card-trip-comment"><%= bookmark.comment %></h2>
            <%= link_to "Delete", bookmark_path(bookmark), method: :delete, class: "btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "back", lists_path %>
<%= link_to "add a bookmark", new_list_bookmark_path(@list) %>
